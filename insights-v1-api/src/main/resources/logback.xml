<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%5p [%t] %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
	</appender>

	<!-- Insights logger file configuration for ALL the Log LEVEL except ERROR 
		LEVEL -->
	<appender name="activity-out"
		class="ch.qos.logback.core.rolling.RollingFileAppender"> <!-- Rolling file appender for rolling files -->
		<param name="File" value="${CATALINA_HOME}/insights_logs/insights-api-v1.log" />
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${CATALINA_HOME}/insights_logs/insights-api-v1-%d{yyyy-MM-dd}.log
			</fileNamePattern>

			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>DENY</onMatch>
			<onMismatch>ACCEPT</onMismatch>
		</filter>
		<param name="encoding" value="UTF-8" />
		<encoder>
			<pattern>%-30([web] %d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32}
				- %msg%n</pattern>
		</encoder>
	</appender>

	<!-- Insights logger file configuration for ERROR LEVEL -->
	<appender name="error-out"
		class="ch.qos.logback.core.rolling.RollingFileAppender"> <!-- Rolling file appender for rolling files -->
		<param name="File"
			value="${CATALINA_HOME}/insights_logs/insights-api-v1-error.log" />
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${CATALINA_HOME}/insights_logs/insights-api-v1-error-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<param name="encoding" value="UTF-8" />
		<encoder>
			<pattern>%-30([web] %d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32}
				- %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.atmosphere" level="WARN"></logger>
	<logger name="org.quartz" level="WARN"></logger>
	<logger name="org.springframework" level="WARN"></logger>
	<logger name="org.hibernate.cfg.HbmBinder" level="WARN"></logger>
	<root>
		<appender-ref ref="activity-out" />
		<appender-ref ref="error-out" />
	</root>
</configuration>

